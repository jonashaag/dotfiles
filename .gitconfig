[core]
    editor = vim

[merge]
    tool = gvimdiff

[user]
    name = Jonas Haag
    email = jonas@lophus.org

# $ cheat git
[color]
    ui = true

[alias]
    s = status
    d = diff
    d2 = diff --staged
    pick = cherry-pick

    br = branch
    co = checkout

    s-u = submodule update --init --recursive
    s-s = submodule status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
