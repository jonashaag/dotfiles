[core]
    editor = vim
    excludesfile = /Users/j/.gitignore_global

[user]
    name = Jonas Haag
    email = jonas@lophus.org

[color]
    ui = true

[alias]
    s = status
    d = diff
    d2 = diff --staged
    pick = cherry-pick

    br = branch
    co = checkout
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
