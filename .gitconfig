[core]
	editor = vim
	excludesfile = /Users/j/.gitignore_global
	pager = diff-so-fancy | less
[user]
	name = Jonas Haag
	email = jonas@lophus.org
[color]
	ui = always
[push]
	default = current
[help]
	autocorrect = 1
[alias]
	s    = status
	d    = diff
	d2   = diff --staged
	d3 = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat" # diff between the latest commit and current state
	ca   = commit --amend
	caa  = commit --amend -a
	pick = cherry-pick
	br   = branch
	co   = checkout
	p    = pull --ff-only
	prb  = pull --rebase
	rb   = rebase
	rbi  = rebase -i
	rbc  = rebase --continue
	rba  = rebase --abort
