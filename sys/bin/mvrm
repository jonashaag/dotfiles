#!/bin/bash -ue
DST_DIR="`cat ~/dev/dotfiles/sys/bin/trashfolder`"

err=
dir_ok=
notfound_ok=
emptyargs=1
for arg in "$@"; do
  # -r flag:
  if [[ "$arg" = "-r" ]]; then
    dir_ok=1
    shift

  # -f flag
  elif [[ "$arg" = "-f" ]]; then
    notfound_ok=1
    shift

  # -rf flag
  elif [[ "$arg" = "-rf" ]]; then
    notfound_ok=1
    dir_ok=1
    shift

  # file arg
  else
    emptyargs=

    # missing file
    if ! test -e "$arg"; then
      echo "$arg: no such file or directory" >&2
      if test -z "$notfound_ok"; then
        err=1
      fi

    # directory but -r missing
    elif test -d "$arg" && ! test -L "$arg" && test -z "$dir_ok"; then
      echo "$arg is a directory" >&2
      err=1
    fi
  fi
done

if ! test -z "$emptyargs"; then
  if test -z "$notfound_ok"; then
    echo "Usage: mvrm [file...]" >&2
    exit 1
  else
    exit 0
  fi
fi

if ! test -z "$err"; then
  echo "Aborting." >&2
  exit 1
else
  #dst="$DST_DIR/$(date +'%c %s %N')"
  #mkdir -p "$dst"
  #for arg in "$@"; do
  #  if test -e "$arg"; then
  #    mv "$arg" "$dst"
  #  fi
  #done
  dst="$DST_DIR/$(date +'%s %c') _$RANDOM"
  mkdir -p "$dst"
  mv "$@" "$dst"
  echo "`basename $0` -> $dst" >&2
fi
