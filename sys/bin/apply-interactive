#!/bin/sh

PATCH=`mktemp`
PATCH2=`mktemp`

cp "$1" $PATCH

ARGS="$@"
shift

git apply $PATCH
git add -p
git commit -m 'blah'
git d > $PATCH2
git reset --hard
eval "$@"
read inp
if [ "$inp" = y ]; then
  mv $PATCH2 $PATCH
  $0 $PATCH $@
else
  git reset --hard HEAD~1
  $0 $ARGS
fi
rm $PATCH
rm $PATCH2
